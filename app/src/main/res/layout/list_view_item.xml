<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    >



            <com.example.z.helloworld.fragments.VersionFragment.pages.AvatarView
                android:layout_gravity="top|left"
                android:layout_weight="0.7"
                android:id="@+id/list_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:layout_gravity="bottom|left"
                android:id="@+id/list_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:textSize="@dimen/list_author_size"/>

            <LinearLayout
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="@dimen/list_author_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/list_title_size"
                    android:text="title" />

                <TextView
                    android:id="@+id/list_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sjfdjslfjsdljfkl"
                    android:textSize="@dimen/list_author_size"/>
            </LinearLayout>


        <TextView
            android:layout_gravity="bottom|right"
            android:id="@+id/list_cteate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-13 17:16:58"
            android:textSize="@dimen/list_author_size"/>



</FrameLayout>