<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <com.example.z.helloworld.fragments.VersionFragment.pages.AvatarView
            android:id="@+id/feed_content_avatar"
            android:layout_width="95dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/feed_btn_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"/>
        <Button
            android:id="@+id/feed_btn_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞"/>
        <Button
            android:id="@+id/feed_btn_goto_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"/>
    </LinearLayout>


    <TextView
        android:textSize="@dimen/list_title_size"
        android:id="@+id/feed_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="标题"/>
    <TextView
        android:id="@+id/feed_content_authorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="作者"/>
    <TextView
        android:id="@+id/feed_content_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2016-12-14 9:35:58"/>

    <ScrollView
        android:layout_weight="0.37"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="top"
                android:textSize="@dimen/list_title_size"
                android:id="@+id/feed_content_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="内容测试个，fdskdlsgjjgklj两节课了圣诞节付款了好骚等加了打勾了"/>

    </ScrollView>

<!--评论-->
    <LinearLayout
        android:id="@+id/feed_content_lineLayout"
        android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:selectAllOnFocus="true"/>
        <EditText
            android:layout_weight="0.8"
            android:id="@+id/feed_edi_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="要吐槽来这里~~" />

        <Button
            android:layout_weight="0.2"
            android:layout_gravity="right|bottom"
            android:id="@+id/feed_btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"/>
    </LinearLayout>
</LinearLayout>